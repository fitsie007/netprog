prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@
srcdir=@srcdir@
CC=@CC@
CFLAGS=@CFLAGS@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@ $(LIBS)
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

all: sock

sock: sock.c

install:
	$(INSTALL_PROGRAM) sock $(bindir)/sock
	$(INSTALL_DATA) sock.1 $(mandir)/man1/sock.1

clean:
	rm -f `find . -name "*~" -o -name "*.[oa]" -o -name "\#*\#" -o -name TAGS -o -name core`
	rm -f sock

distclean: clean
	rm -f Makefile config.h config.cache config.log config.status

allclean: clean
	rm -f configure

dist: distclean
	sh -c 'X=`pwd` ; X=`basename $$X` ; cd .. ; tar czvvf /tmp/$$X.tar.gz $$X --exclude CVS --exclude tmp'
